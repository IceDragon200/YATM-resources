{
  "$includes": ["_variables", "_dye"],
  "output": "blocks/mesecon_lock/$color$_top.off",
  "layers": {
    "base": { "texture": "blocks/mesecon_lock/top.base.png" },
    "mask": {
      "texture": "blocks/mesecon_lock/top.mask.png",
      "blend": {
        "type": "multiply_color",
        "value": { "$variable": "dye.$color$" }
      }
    }
  },
  "frames": [
    {
      "layers": ["base", "mask"]
    }
  ]
}
