{
  "$includes": ["_variables"],
  "output": "blocks/mesecon_button/$color$_side.on",
  "layers": {
    "base": { "texture": "blocks/mesecon_button/side.base.png" },
    "glass": {
      "texture": "blocks/mesecon_button/side.on.button.png",
      "blend": {
        "type": "multiply_color",
        "value": { "$variable": "dye.$color$" }
      }
    }
  },
  "frames": [
    {
      "layers": ["base", "glass"]
    }
  ]
}
