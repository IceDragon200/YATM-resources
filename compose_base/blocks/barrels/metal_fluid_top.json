{
  "$includes": ["_variables"],
  "output": "blocks/barrel_metal/fluid_$color$_top",
  "layers": {
    "base": { "texture": "blocks/barrel_metal/top.base.png" },
    "banner": {
      "texture": "blocks/barrel_metal/top.mask.png",
      "blend": {
        "type": "multiply_color",
        "value": { "$variable": "dye.$color$" }
      }
    }
  },
  "frames": [
    { "layers": ["base", {"source": "banner", "blend": "overlay"}] }
  ]
}
