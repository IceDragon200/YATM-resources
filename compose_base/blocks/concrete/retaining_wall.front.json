{
  "$includes": ["_variables"],
  "output": "blocks/retaining_wall/$color$_front",
  "layers": {
    "base": {
      "texture": "blocks/retaining_wall/front.base.png"
    },
    "concrete": {
      "texture": "blocks/retaining_wall/front.base.png",
      "mask": "blocks/retaining_wall/front.mask.png",
      "blend": {
        "type": "multiply_color",
        "value": { "$variable": "dye.$color$" }
      }
    }
  },
  "frames": [
    {
      "layers": ["base", "concrete"]
    }
  ]
}
