{
  "$includes": ["_variables"],
  "output": "gui/colored_switches/$color$.right",
  "layers": {
    "base": {
      "texture": "gui/button.base.switch.48px.png"
    },
    "mask": {
      "texture": "gui/button.switch.right.48px.png",
      "mask": "gui/button.plate.base.colored.mask.48px.png",
      "blend": {
        "type": "multiply_color",
        "value": { "$variable": "dye.$color$" }
      }
    }
  },
  "frames": [
    { "layers": ["base", "mask"] }
  ]
}